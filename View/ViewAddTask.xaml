<Window x:Class="AdministradorDeTareas.View.ViewAddTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdministradorDeTareas.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"    
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:AdministradorDeTareas.ViewModel"
        xmlns:dpconfig="http://schemas.bhandari.net.nz/2018/xaml/presentation"
        Title="AddTask"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="320" Width="730"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.DataContext>
        <viewModel:ViewModelAddTask/>
    </Window.DataContext>
    <Border BorderBrush="Black" BorderThickness="5">
        <Border.Background>
            <SolidColorBrush Color="White"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <StackPanel
                Orientation="Horizontal"
                Grid.Row="0">
                <fa:IconImage 
                    Icon="ListCheck" 
                    HorizontalAlignment="Left" 
                    Height="30"
                    Margin="40,12,0,0"
                    Foreground="Black"/>
                <Label
                   Content="Создание задачи"
                   FontSize="27"
                   Foreground="Black"
                   Margin="8,20,0,0">
                </Label>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Grid.Row="1">
                <Label
                   Content="Название"
                   FontSize="20"
                   Foreground="Black"
                    VerticalAlignment="Center"
                   Margin="40,0,0,10">
                </Label>
                <TextBox
                        Width="300"
                        HorizontalAlignment="left"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="Black"
                        FontFamily="Didot"
                        CaretBrush="LightGray"
                        BorderBrush="Gray"
                        BorderThickness="0,0,0,1"
                        Height="25"                 
                        VerticalAlignment="Center"
                        Margin="10,5,0,0"
                        Padding="0,0,0,0"
                        MaxLength="30"
                        Text="{Binding Title, Mode=TwoWay}"
                        Grid.Row="1"
                        />
                <ComboBox
                     Width="130"
                     Height="36"
                     Margin="20,0,0,10"
                     x:Name="ComboPriority"                
                     materialDesign:HintAssist.Hint="Приоритет"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     SelectedIndex="{Binding PrioritySelect, Mode=OneWayToSource}"                  
                     Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBoxItem Content="Низкий"/>
                    <ComboBoxItem Content="Средний"/>
                    <ComboBoxItem Content="Высокий"/>
                </ComboBox>
                <DatePicker
                  Width="127"
                  Height="36"
                  Margin="20,0,0,10"
                  SelectedDate="{Binding DueDate, Mode=OneWayToSource}"
                  materialDesign:HintAssist.Hint="Дата"
                  materialDesign:TextFieldAssist.HasClearButton="True"
                  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
            </StackPanel>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <fa:IconImage
                    Icon="PenToSquare" 
                    HorizontalAlignment="Left" 
                    Height="30"
                    Margin="45,12,0,0"
                    Foreground="Black"/>
                <TextBox
                        Width="620"
                        HorizontalAlignment="left"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="Black"
                        FontFamily="Didot"
                        CaretBrush="LightGray"
                        BorderBrush="Gray"
                        BorderThickness="0,0,0,1"
                        Height="25"                 
                        VerticalAlignment="Center"
                        Margin="20,5,0,0"
                        Padding="0,0,0,0"
                        MaxLength="100"
                        Text="{Binding Description, Mode=TwoWay}"
                        Grid.Row="1"
                        />
            </StackPanel>
            <StackPanel Grid.Row="4"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button Cursor="Hand"
                           Width="150"   
                           Height="35"                        
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"    
                           Margin="0,0,10,0"
                           Command="{Binding CreateTask}"
                           Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Background="Black">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FilePen" HorizontalAlignment="Left" 
                                     Height="15"
                                     Margin="0,0,0,0"
                                     Foreground="White"/>
                        <TextBlock Text="Добавить"
                                  Margin="5,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  FontSize="13"
                                  >
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button Cursor="Hand"
                           Width="150"   
                           Height="35"                        
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"    
                           Margin="0,0,10,0"
                           Click="CloseWindow"
                           Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Background="Black">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Cancel" HorizontalAlignment="Left" 
                                     Height="15"
                                     Margin="0,0,0,0"
                                     Foreground="White"/>
                        <TextBlock Text="Отмена"
                                  Margin="5,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  FontSize="13"
                                  >
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>