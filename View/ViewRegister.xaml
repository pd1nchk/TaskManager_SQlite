<Window x:Class="AdministradorDeTareas.View.ViewRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdministradorDeTareas.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:AdministradorDeTareas.ViewModel"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"  
        Title="RegisterView" Height="360" Width="730">
    <Window.DataContext>
        <viewModel:ViewModelRegister/>
    </Window.DataContext>
    <Border>
        <Border>
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid
                        Grid.Row="2"
                        Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                              Margin="10,2,10,6"
                              Grid.Column="1"
                              Foreground="White"
                              FontFamily="Didot"
                              FontSize="16"
                              Content="Зарегистрировать"
                              Command="{Binding RegisterCommand}"
                              ToolTip="Add register">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0"
                                Grid.Row="0">
                    <fa:IconImage
                            Icon="PenToSquare"
                            Foreground="Black"
                            Height="40"
                            Width="40"
                            Margin="20,0,0,0">
                    </fa:IconImage>
                    <TextBlock FontSize="20"
                                   Foreground="Black"
                                   FontFamily="Didot"
                                   Margin="20,15,0,0">
                               Регистрация нового пользователя
                    </TextBlock>

                    <Button
                           BorderThickness="0"
                           Content="x"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           Cursor="Hand"
                           Grid.Column="2"
                           Margin="300,0,10,10"
                           ToolTip="Return to log in page"
                           Command="{Binding ReturnLoginPageCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                            Icon="UserAlt"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,40,0,0">
                            </fa:IconImage>
                            <TextBox
                            Width="250"
                            Margin="20,40,0,0"
                            Foreground="Black"
                            MaxLength="20"
                            Text="{Binding userName, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Имя пользователя"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                            Icon="Key"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,60,0,0">
                            </fa:IconImage>
                            <TextBox
                            Width="250"
                            Margin="20,60,0,0"
                            Foreground="Black"
                            MaxLength="30"
                            Text="{Binding password, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Пароль"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                            Icon="EnvelopeSquare"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,40,0,0">
                            </fa:IconImage>
                            <TextBox
                            Width="250"
                            Margin="20,40,0,0"
                            Foreground="Black"
                            MaxLength="75"
                            Text="{Binding email, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Email"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                            Icon="UserTag"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,60,0,0">
                            </fa:IconImage>
                            <TextBox
                            Width="250"
                            Margin="20,60,0,0"
                            Foreground="Black"
                            MaxLength="60"
                            Text="{Binding name, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Имя и Фамилия"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
