<Window x:Class="AdministradorDeTareas.View.ViewEditUserCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:AdministradorDeTareas.ViewModel"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="ViewChangePassword" Height="550" Width="450">
    <Window.DataContext>
        <viewModel:ViewModelEditCredentials/>
    </Window.DataContext>
        <Border BorderBrush="Black" BorderThickness="5">
            <Border.Background>
            <SolidColorBrush Color="White"/>
        </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <fa:IconImage
                            Icon="PenToSquare"
                            Foreground="Black"
                            Height="40"
                            Width="40"
                            Margin="20,0,0,0">
                        </fa:IconImage>
                        <TextBlock FontSize="20"
                                   Foreground="Black"
                                   FontFamily="Didot"
                                   Margin="20,15,0,0">
                               Изменение данных
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Icon="UserAlt"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,40,0,0">
                        </fa:IconImage>
                        <TextBox
                            Width="330"
                            Margin="20,40,0,0"
                            Foreground="Black"
                            MaxLength="20"
                            Text="{Binding CurrentUser.UserName, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Имя пользователя"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Icon="EnvelopeSquare"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,60,0,0">
                        </fa:IconImage>
                        <TextBox
                            Width="330"
                            Margin="20,60,0,0"
                            Foreground="Black"
                            MaxLength="75"
                            Text="{Binding CurrentUser.Email, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Email"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Icon="UserTag"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,60,0,0">
                        </fa:IconImage>
                        <TextBox
                            Width="330"
                            Margin="20,60,0,0"
                            Foreground="Black"
                            MaxLength="60"
                            Text="{Binding CurrentUser.FullName, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Имя и фамилия"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            >
                        </TextBox>
                    </StackPanel>
                <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontWeight="Bold"
                        FontSize="14"
                        Margin="0,30,0,0">Введите ваш пароль чтобы изменить</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Icon="UserLock"
                            Foreground="Black"
                            Height="30"
                            Width="30"
                            Margin="20,30,0,0">
                        </fa:IconImage>
                        <TextBox
                            Width="330"
                            Margin="20,20,0,0"
                            Foreground="Black"
                            MaxLength="30"
                            Text="{Binding Password, Mode=TwoWay}"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Пароль"
                            materialDesign:HintAssist.Foreground="White"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                        >
                        </TextBox>
                    </StackPanel>
                    <Grid
                        Grid.Row="1"
                        Margin="0,50,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                              Margin="0,20,10,0"
                              Grid.Column="1"
                              Width="150"
                              Content="Сохранить"
                              Command="{Binding EditCredentialsCommand}"
                              Style="{StaticResource MaterialDesignRaisedDarkButton}"
                              ToolTip="Edit" Background="Black" BorderBrush="Black"/>
                        <Button
                        Width="30"
                        Height="30"
                        Grid.Column="2"
                        Margin="100,20,20,0"
                        Command="{Binding CancelEditCommand}"
                        Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                        ToolTip="Назад" Background="Black" BorderBrush="Black"
                             >
                            <fa:IconImage
                                Width="20"
                                Height="20"
                                Icon="ArrowAltCircleLeft"
                                Foreground="White"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
</Window>
